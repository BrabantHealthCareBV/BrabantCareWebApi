@page
@model BrabantCareWebApi.Pages.Guardians.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Guardians</h2>
<a asp-page="Create" class="btn btn-primary">Add Guardian</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guardian in Model.Guardians)
        {
            <tr>
                <td>@guardian.FirstName</td>
                <td>@guardian.LastName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@guardian.ID" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@guardian.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
