@page
@model BrabantCareWebApi.Pages.ReportBugModel

<div class="m-3 p-3">
    <div class="text-center">
        <h4 class="display-4">Report a bug</h4>
    </div>

    <form method="post">
        <div class="row">
            <input type="text"
                   name="Title"
                   @* value="@Model.Report.Title" *@
                   placeholder="Title"
                   style="width: 25%;"
                   class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
