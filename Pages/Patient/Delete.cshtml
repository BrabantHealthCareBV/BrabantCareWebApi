@page "{id:int}"
@model BrabantCareWebApi.Pages.Patients.DeleteModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Patient</h2>

<p>Are you sure you want to delete this patient?</p>

<ul>
    <li><strong>First Name:</strong> @Model.ExistingPatient.FirstName</li>
    <li><strong>Last Name:</strong> @Model.ExistingPatient.LastName</li>
    <li><strong>Guardian:</strong> @Model.ExistingPatient.GuardianName</li>
    <li><strong>Treatment Plan:</strong> @Model.ExistingPatient.TreatmentPlanName</li>
    <li><strong>Doctor:</strong> @Model.ExistingPatient.DoctorName</li>
</ul>

<form method="post">
    <input type="hidden" asp-for="@Model.ExistingPatient.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
