@page "{id:int}"
@model BrabantCareWebApi.Pages.Patients.EditModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Edit Patient</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.ExistingPatient.Id" />

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input asp-for="@Model.ExistingPatient.FirstName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input asp-for="@Model.ExistingPatient.LastName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Guardian</label>
        <select asp-for="@Model.ExistingPatient.GuardianId" asp-items="Model.Guardians" class="form-control" required>
            <option value="">Select a Guardian</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Treatment Plan</label>
        <select asp-for="@Model.ExistingPatient.TreatmentPlanId" asp-items="Model.TreatmentPlans" class="form-control" required>
            <option value="">Select a Treatment Plan</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Doctor</label>
        <select asp-for="@Model.ExistingPatient.DoctorId" asp-items="Model.Doctors" class="form-control" required>
            <option value="">Select a Doctor</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
