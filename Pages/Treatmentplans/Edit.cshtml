@page "{id:guid}"
@model BrabantCareWebApi.Pages.TreatmentPlans.EditModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Edit Treatment Plan</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="TreatmentPlan.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Care Moments</label>
        <select asp-for="TreatmentPlan.CareMomentIDs" asp-items="Model.CareMomentSelectList" class="form-control" multiple>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
