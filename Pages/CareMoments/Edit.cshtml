@page "{id}"
@model BrabantCareWebApi.Pages.CareMoments.EditModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Edit Care Moment</h2>

<form method="post">
    <input type="hidden" asp-for="updatedCareMoment.ID" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="updatedCareMoment.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">URL</label>
        <input asp-for="updatedCareMoment.Url" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Duration (minutes)</label>
        <input asp-for="updatedCareMoment.DurationInMinutes" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
