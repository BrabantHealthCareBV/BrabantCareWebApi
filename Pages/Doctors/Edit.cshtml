@page "{id}"
@model BrabantCareWebApi.Pages.Doctors.EditModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Edit Doctor</h2>

<form method="post">
    <input type="hidden" asp-for="updatedDoctor.ID" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="updatedDoctor.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Specialization</label>
        <input asp-for="updatedDoctor.Specialization" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
