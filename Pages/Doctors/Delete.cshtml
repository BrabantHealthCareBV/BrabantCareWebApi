@page "{id}"
@model BrabantCareWebApi.Pages.Doctors.DeleteModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Doctor</h2>

<p>Are you sure you want to delete this doctor: "<strong>@Model.DoctorToDelete.Name</strong>"?</p>

<form method="post">
    <input type="hidden" asp-for="DoctorToDelete.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
