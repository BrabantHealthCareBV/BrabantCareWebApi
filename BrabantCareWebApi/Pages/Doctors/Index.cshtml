@page
@model BrabantCareWebApi.Pages.Doctors.IndexModel
@{
	Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Doctors</h2>
<a asp-page="Create" class="btn btn-primary mb-3">Create New</a>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Specialization</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var doctor in Model.Doctors)
		{
			<tr>
				<td>@doctor.Name</td>
				<td>@doctor.Specialization</td>
				<td>
					<a asp-page="Edit" asp-route-id="@doctor.ID" class="btn btn-warning ">Edit</a>
					<a asp-page="Delete" asp-route-id="@doctor.ID" class="btn btn-danger ">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
