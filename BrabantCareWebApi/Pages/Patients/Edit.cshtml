@page "{id}"
@model BrabantCareWebApi.Pages.Patients.EditModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Edit Patient</h2>

<form method="post" asp-page="/Patients/Edit">
    <input type="hidden" asp-for="updatedPatient.ID" />
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input asp-for="updatedPatient.firstName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input asp-for="updatedPatient.lastName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Birthdate</label>
        <input asp-for="updatedPatient.birthdate" class="form-control" type="date" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Next Appointment Date</label>
        <input asp-for="updatedPatient.nextAppointmentDate" class="form-control" type="datetime-local" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Guardian</label>
        <select asp-for="updatedPatient.guardianID" class="form-control" asp-items="@(new SelectList(Model.Guardians, "ID", "FirstName"))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Treatment Plan</label>
        <select asp-for="updatedPatient.treatmentPlanID" class="form-control" asp-items="@(new SelectList(Model.TreatmentPlans, "ID", "Name"))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Doctor</label>
        <select asp-for="updatedPatient.doctorID" class="form-control" asp-items="@(new SelectList(Model.Doctors, "ID", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
