@page "{id}"
@model BrabantCareWebApi.Pages.Patients.DeleteModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Patient</h2>

<p>Are you sure you want to delete this patient: "<strong>@Model.PatientToDelete.FirstName</strong>"?</p>

<form method="post">
    <input type="hidden" asp-for="@Model.PatientToDelete.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
